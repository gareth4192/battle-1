<div style="margin: 100px auto 30px">

  <h1><%= @game.player_1_name %> vs. <%= @game.player_2_name %></h1>
  <h3><%= @game.player_1_name %>: <%= @game.player_1_hit_points %>HP</h3>
  <h3><%= @game.player_2_name %>: <%= @game.player_2_hit_points %>HP</h3>

  <% if @game.message  %>
    <h3><%= @game.message %></h3>
    <a href='/switch'>Ok</a>
  <% else %>
    <a href='/attack'>Attack</a>
    <a href='/heal'>Heal</a>
  <% end %>
</div>
